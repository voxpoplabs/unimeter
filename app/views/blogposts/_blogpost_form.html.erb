<%= form_for [@meter, @blogpost], remote: true do |f| %>
	<%= render "shared/error_messages", object: f.object %>
	
	<div class="modal-body">
		<div class="form-group">  
			<%= f.label :title, "Title", class: "form-label" %>
			<%= f.text_field :title, required: true, class: "form-input" %>
		</div>

		<div class="form-group">  
			<%= f.label :content, "Content", class: "form-label" %>
			<%= f.text_area :content, required: true, class: "form-input autosize" %>
		</div>
	</div>
	
	<div class="modal-footer">
		<a class="btn close-modal">Cancel</a>
		<%= f.button "Post", class: "btn btn-primary" %>
	</div>
	
<% end %>