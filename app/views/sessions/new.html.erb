<aside class="session hide-lg">
	<%= image_tag("1.png") %>
</aside>

<section class="session">
	<div class="rel">
		<%= link_to image_tag("logo-black.png", style: "height:2rem"), root_url, class: "logo" %>
		<%= form_for(:session, remote: true, url: login_path) do |f| %>
			<% flash.each do |key, value| %>
					<div class="toast toast-<%= key %>"><%= value %></div>
			<% end %>

			<div class="form-group">
				<%= f.label :email, class: "form-label" %>
				<br>
				<%= f.email_field :email, required: true, placeholder: "Email", class: "form-input input-lg" %>
			</div>

			<div class="form-group">
				<%= f.label :password, class: "form-label" %>
				<br>
				<%= f.password_field :password, required: true, placeholder: "Password", class: "form-input input-lg" %>
			</div>

			<div class="form-group">
				<%= f.submit "Log In", class: "btn btn-primary btn-lg" %>
			</div>

			<div class="form-group">
				<%= link_to "Forgot your password?", new_password_reset_path, id: "forgot" %>
			</div>

			<div class="form-group hide">
				<%= f.label :remember_me do %>
					<%= f.check_box :remember_me, {checked: true} %>
					<span>Remember me on this device</span>
				<% end %>
			</div>
		<% end %>

		<div class="account">Want to build your own polimeter? <%= link_to "Sign Up", signup_path, class: "btn" %></div>
	</div>
</section>
