<section class="session">
	<%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
		<div class="form-title">Reset Password</div>
		<div class="form-subtitle" style="border-bottom:0;text-align:center">Enter your new password below.</div>

		<%= render "shared/error_message", object: f.object %>
		<%= hidden_field_tag :email, @user.email %>

		<div class="form-group">
			<%= f.label :password, class: "form-label" %>
			<%= f.password_field :password, required: true, class: "form-input" %>
		</div>

		<div class="form-group">
			<%= f.label :password_confirmation, "Confirmation",  class: "form-label" %>
			<%= f.password_field :password_confirmation, required: true, class: "form-input" %>
		</div>

		<%= f.submit "Update password", class: "btn btn-primary" %>
	<% end %>
</section>