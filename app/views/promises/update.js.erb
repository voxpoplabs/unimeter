<% status_icons = ["", "fa-hourglass-start", "fa-cogs", "fa-check-circle-o", "fa-ban"] %>
<% category_icons = ["", @promise.meter.icon_category1, @promise.meter.icon_category2, @promise.meter.icon_category3, @promise.meter.icon_category4, @promise.meter.icon_category5, @promise.meter.icon_category6, @promise.meter.icon_category7] %>

<% categories = ["", @promise.meter.category1, @promise.meter.category2, @promise.meter.category3, @promise.meter.category4, @promise.meter.category5, @promise.meter.category6, @promise.meter.category7] %>
<% statuses = ["", @meter.status1, @meter.status2, @meter.status3, @meter.status4] %>

<% description = @promise.description %>
<% subcategory = @promise.subcategory %>

<% source_date = @promise.source_date %>
<% source_link_name = @promise.source_link_name %>
<% source_link_url = @promise.source_link_url %>
<% source_section = @promise.source_section %>

