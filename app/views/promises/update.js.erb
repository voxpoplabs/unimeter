$("#promise-category").html(
	"<i class='fa fa-<%= category_icons[@promise.category] %> fa-fw'></i> \
	<span><%= categories[@promise.category] %></span> \
	<span><%= subcategory.mb_chars.upcase unless subcategory.blank? %></span>"
);

$("#promise-description").html("<h1><%= description %></h1>");

$("#promise-source").html(
	"<span><a href='<%= source_link_url %>' target='_blank'><%= source_link_name %></a></span> \
	<span><%= source_section unless source_section.blank? %></span> \
	<span><%= source_date.try(:strftime, '%B %e, %Y') unless source_date.blank? %></span>"
);
	
