<section class="dashboard">
	<div class="container">
		<%= form_for @user, html: { class: "view col-10 col-sm-12" } do |f| %>
			<h5>User settings</h5>

			<%= render "shared/error_messages", object: f.object %>
			
			<div class="columns">
				<div class="column col-3 col-sm-12">
					<h6>General Info</h6>
				</div>
				
				<div class="column col-9 col-sm-12">
					<div class="form-group">
						<%= f.label :name, class: "form-label" %>
						<%= f.text_field :name, class: "form-input" %>
					</div>
				</div>
			</div>

			<div class="columns">
				<div class="column col-3 col-sm-12">
					<h6>Password</h6>
				</div>

				<div class="column col-9 col-sm-12">
					<div class="form-group">
						<%= f.label :password, class: "form-label" %>
						<%= f.password_field :password, class: "form-input" %>
					</div>

					<div class="form-group">
						<%= f.label :password_confirmation, class: "form-label" %>
						<%= f.password_field :password_confirmation, class: "form-input" %>
					</div>
				</div>
			</div>

			<div class="columns">
				<div class="column">
					<%= f.submit "Save changes", class: "btn btn-primary float-right" %>
				</div>
			</div>
		<% end %>
	</div>
</section>