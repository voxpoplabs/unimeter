<aside class="session hide-lg">
	<%= image_tag("1.png") %>
</aside>

<section class="session">
	<div class="rel">
		<%= link_to image_tag("logo-black.png", style: "height:2rem"), root_url, class: "logo" %>
		<%= form_for @user do |f| %>
			<h2 class="tc" style="font-size:1em;margin-bottom:1em">Sign up to create your own polimeter and track the promises made by your politicians.</h2>

			<%= render "shared/error_messages", object: f.object %>

			<div class="form-group">
				<%= f.label :name, class: "form-label" %>
				<%= f.text_field :name, required: true, class: "form-input" %>
			</div>

			<div class="form-group">
				<%= f.label :email, class: "form-label" %>
				<%= f.email_field :email, required: true, class: "form-input" %>
			</div>

			<div class="form-group">
				<%= f.label :password, class: "form-label" %>
				<%= f.password_field :password, required: true, class: "form-input" %>
			</div>

			<div class="form-group">
				<%= f.label :password_confirmation, class: "form-label" %>
				<%= f.password_field :password_confirmation, required: true, class: "form-input" %>
			</div>

			<div class="form-group">
				By signing up, you agree to our <%= link_to "Terms", terms_path, target: "_blank" %> and <%= link_to "Privacy Policy", privacy_path, target: "_blank" %>.
			</div>

			<%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
		<% end %>

		<div class="account">Already have an account? <%= link_to "Log in", login_path, class: "btn" %></div>
	</div>
</section>