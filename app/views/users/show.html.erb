<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
    <div class="col-md-8">
    <% if @user.meters.any? %>
      <h3>meters (<%= @user.meters.count %>)</h3>
      <ol class="meters">
        <%= render @meters %>
      </ol>
      <%= will_paginate @meters %>
    <% end %>
  </div>
</div>
