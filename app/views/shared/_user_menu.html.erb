<div class="dropdown dropdown-right">
	<div class="dropdown-title">
		<figure class="avatar" data-initial="<%= initials(current_user.name) %>"></figure>
	</div>
	<div class="menu" style="width:24rem">
		<div style="padding:1.2rem">
			<b class="block te"><%= current_user.name %></b>
			<span class="block te" style="font-size:.9em;opacity:.75"><%= current_user.email %></span>
		</div>
		<hr>
		<%= link_to "<i class='fa fa-th-large fa-fw'></i> My Dashboard".html_safe, dashboard_url(:subdomain => "www"), class: "menu-item" %>
		<%= link_to "<i class='fa fa-lock fa-fw'></i> User settings".html_safe, edit_user_url(current_user, :subdomain => "www"), class: "menu-item" %>
		<%= link_to "<i class='fa fa-sign-out fa-fw'></i> Sign out".html_safe, logout_path, method: "delete", class: "menu-item" %>
	</div>
</div>
